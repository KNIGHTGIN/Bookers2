
  <div class = "container px-5 px-sm-0">
  <div class = "row">
  <div class = "col-md-3">

    <% if flash[:notice] %>
      <p id="notice">
          <%= flash[:notice] %>
      </p>
      <% end %>

<h2>User info</h2>
<table class="table">
  <tbody>
    <tr><th><%= image_tag @user.get_profile_image(80,80)  %></th></tr>
    <tr><th>name: <%= @user.name %></th></tr>
    <tr><th>introduction: <%= @user.introduction %></th></tr>
  </tbody>
</table>

<%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block', method: :get do %>
<i class="fas fa-user-cog"></i>
<% end %>

<h2 class="mt-3">New book</h2>
<%= form_with model: @newbook, local:true do |f| %>
<label for="book_title">Title</label>
<%=f.text_field :title %>
<label for="book_opinion">Opinion</label>
<%=f.text_area :body %>
<%=f.submit 'Create Book', class: 'btn btn-success' %>
<% end %>
</div>

<div class= "col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class= "table table-hover table-inverse">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <th>
          <%= link_to user_path(book.user) do  %>
          <%= image_tag (book.user.get_profile_image(80, 80) ) %>
          <% end %>
        </th>
        <th>
          <%= link_to book.title, book_path(book.id) %>
        </th>
        <th>
          <%= book.body %>
        </th>
        <% end %>
      </tr>
    </thead>
  </table>
</div>
  </div>
  </div>
